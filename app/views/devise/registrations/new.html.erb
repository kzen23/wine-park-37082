<div class="titles_wrap">
  <h2 class="sub_title">新規登録</h2>
</div>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <div class="errors">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

<div class="boss_form">
  <div class="input_form">
    <%= f.label :email %><br />
    <%= f.email_field :email,class:"input_parts", autocomplete: "off" %>
  </div>

  <div class="input_form">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password,class:"input_parts", autocomplete: "off" %>
  </div>

  <div class="input_form">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "input_parts", autocomplete: "off" %>
  </div>

  <div class="input_form">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname,class:"input_parts", max_length: "20", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="input_form">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "input_parts" %><br />
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "input_parts" %>
  </div>

  <div class="input_form">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, class: "input_parts" %><br />
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, class: "input_parts" %>
  </div>

<div class="birthday_label">
  <%= f.label :birthday %><br />
</div>
  <div class="birthday_form">
    <%= raw sprintf(
                f.date_select(
                  :birthday,
                  class:'select_birthday',
                  id:"birthday",
                  use_month_numbers: true,
                  prompt:'--',
                  start_year: (Time.now.year - 100),
                  end_year: (Time.now.year - 20),
                  date_separator: '%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="registration_button">
    <%= f.submit "新規登録する", class: "button" %>
  </div>
<% end %>
<div class="links">
  <%= render "devise/shared/links" %>
</div>
</div>